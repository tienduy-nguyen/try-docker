{
  "compilerOptions": {
    "target": "esNext",
    "typeRoots": [
      "./node_modules/@types",
      "src/common/types"
    ],
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,


    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"],
      "@app/*": ["src/app/*"],

    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
